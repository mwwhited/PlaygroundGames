CLS
SCREEN 13
R = 32: B = 32: G = 32
NEXTPAL:
LOCATE 23, 5: PRINT "PRESS ENTER TO SET COLOR"
IF R > 62 THEN R = 63
IF R < 0 THEN R = 0
IF B > 63 THEN B = 63
IF B < 0 THEN B = 0
IF G > 63 THEN G = 63
IF G < 0 THEN G = 0
LOCATE 2, 11: PRINT "RED   "; R: LOCATE 2, 21: PRINT "-Q =W= E+"
     LINE (8, 8)-(8 + R, 16), 4, BF
     LINE (8 + R, 8)-(71, 16), 4, B
IF R < 61 THEN LINE (9 + R, 9)-(70, 15), 0, BF
LOCATE 4, 11: PRINT "BLUE  "; B: LOCATE 4, 21: PRINT "-A =S= D+"
     LINE (8, 24)-(8 + B, 32), 1, BF
     LINE (8 + B, 24)-(71, 32), 1, B
IF B < 61 THEN LINE (9 + B, 25)-(70, 31), 0, BF
LOCATE 6, 11: PRINT "GREEN "; G: LOCATE 6, 21: PRINT "-Z =X= C+"
     LINE (8, 40)-(8 + G, 48), 2, BF
     LINE (8 + G, 40)-(71, 48), 2, B
IF G < 61 THEN LINE (9 + G, 41)-(70, 47), 0, BF
PALETTE 6, R + (B * 65536) + (G * 256)
LINE (8, 56)-(48, 102), , B
LINE (9, 57)-(47, 101), 6, BF
PAL:
PAL$ = INKEY$
IF PAL$ = "" THEN GOTO PAL
IF PAL$ = "Q" THEN R = R - 1: GOTO NEXTPAL
IF PAL$ = "E" THEN R = R + 1: GOTO NEXTPAL
IF PAL$ = "A" THEN B = B - 1: GOTO NEXTPAL
IF PAL$ = "D" THEN B = B + 1: GOTO NEXTPAL
IF PAL$ = "Z" THEN G = G - 1: GOTO NEXTPAL
IF PAL$ = "C" THEN G = G + 1: GOTO NEXTPAL
IF PAL$ = "W" THEN R = 32: GOTO NEXTPAL
IF PAL$ = "S" THEN B = 32: GOTO NEXTPAL
IF PAL$ = "X" THEN G = 32: GOTO NEXTPAL
IF PAL$ = CHR$(13) THEN END
GOTO PAL

